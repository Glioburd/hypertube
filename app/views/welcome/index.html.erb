<div id="container">
<h1>Hyper Tube !</h1>

<% if user_signed_in? %>
<% i = Imdb::Search.new("La grande vadrouille") %>
<% i.movies.each do |movie| %>
  <% id = movie.id %>
  <% allmovie = Imdb::Movie.new(id)%>
  <img src="<%= allmovie.poster %>" width="250" height="400">
  <strong>Titre : </strong><p><%= allmovie.title %></p>
  <strong>Casting : </strong><p><%= allmovie.cast_members %></p>
  <strong>Director : </strong><p><%= allmovie.director %></p>
  <strong>Trailer url : </strong><p><%= allmovie.trailer_url %></p>
  <strong>Genre : </strong><p><%= allmovie.genres %></p>
  <strong>Langues : </strong><p><%= allmovie.languages %></p>
  <strong>Pays : </strong><p><%= allmovie.countries %></p>
  <strong>Company : </strong><p><%= allmovie.company %></p>
  <strong>Sinopsys : </strong><p><%= allmovie.plot %></p>
  <strong>Notes : </strong><p><%= allmovie.rating %></p>
  <strong>Votes : </strong><p><%= allmovie.votes %></p>
  <strong>Tagline : </strong><p><%= allmovie.tagline %></p>
  <strong>Dur√©e : </strong><p><%= allmovie.length %></p>
  <br />
  <br />
<% end %>
  Logged in as <strong><%= current_user.email %></strong>.
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <div id="login">
    <a href="<%= new_user_registration_path %>">
      <button id="login" type="button" class="btn btn-success">Sign up</button>
    </a>
    <a href="<%= new_user_session_path %>">
     <button id="login1" type="button" class="btn btn-warning">Login</button>
    </a>
  </div>
<% end %>
<% if  current_user %>
	<% if current_user.avatar? %>
		<center><%= image_tag current_user.avatar, :class => "style_image" %></center>
	<% else %>
		<center><%= image_tag current_user.imageOauthUrl, :class => "style_image" %></center>
	<% end %>
<% end %>
</div>
<div id="oauth">
<% unless current_user %>
  <a class="btn btn-block btn-social btn-facebook" href="<%= user_facebook_omniauth_authorize_path %>">
    <span class="fa fa-facebook"></span> Sign in with Facebook
  </a>
  <a class="btn btn-block btn-social btn-github" href="<%= user_marvin_omniauth_authorize_path %>">
    <span><img src=<%= image_url('42logo.svg') %>/ style="width: 80%; height: 80%"></span> Sign in with 42
  </a>
  <a class="btn btn-block btn-social btn-twitter" href="<%= user_twitter_omniauth_authorize_path %>">
    <span class="fa fa-twitter"></span> Sign in with Twitter
  </a>
<% else %>
  <%= link_to "Logout".html_safe, destroy_user_session_path, method: :delete, :class => 'btn btn-danger', :id => 'logout'%>
<% end %>
</div>