<div class="col-xs-6 col-md-3">
	<% myModal = 'myModal' + $increment.to_s %>
	<a href="#" class="thumbnail" data-toggle="modal" data-target="#<%= myModal %>">
		<p><img src="<%= movie['medium_cover_image'] %>" class="img-thumbnail"></p>
	</a>

	<% if movie['torrents'] && movie['torrents'][1] %>
		<% torrents = movie['torrents'][1] %>
		<p><%= movie['title'] + ' (' + movie['year'].to_s + ')' + 'Note : ' + movie['rating'].to_s + ' Seeds : ' + torrents['seeds'].to_s + ' Peers : ' + torrents['peers'].to_s %></p>
	<% else %>
		<p><%= movie['title'] + ' (' + movie['year'].to_s + ')' + 'Note : ' + movie['rating'].to_s %></p>
	<% end %>
	<% if movie['languages'] %>
		<%= form_tag("/movie/new", method: "post") do %>
			<% languages = []
				movie['languages'].each_with_index do |l, i|
					languages.push([l[:language], l[:magnet_link]])
				end %>
			<%= select_tag(:magnet_link, options_for_select(languages)) %>
			<%= submit_tag("Voir le film") %>
		<% end %>
	<% else %>
		<%= form_tag("/movie/new", method: "post") do %>
			<%= hidden_field_tag 'torrent', movie['torrents'][0]['url'] %>
			<%= submit_tag("Voir le film") %>
		<% end %>
	<% end %>
	<br>
	<div class="modal fade" id="<%= myModal %>" role="dialog">
    <div class="modal-dialog">
    <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= movie['title'] %></h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
    </div>
    <% $increment += 1 %>
</div>
  
