<%= jwplayer_assets %>
<link href="//vjs.zencdn.net/5.4.6/video-js.min.css" rel="stylesheet">
<script src="//vjs.zencdn.net/5.4.6/video.min.js"></script>
<video class="video-js" id="video" width="800" height="500" preload="auto" controls>
  <source src="<%= @video.path %>" type="video/mp4">
  <% @translates.each do |translate| %>
    <track src="/trads/<%= translate.path %>#ss" kind="subtitles" srclang="<%= translate.label %>" label="<%= translate.label %>">
  <% end %>
</video>
<script>
  $(document).ready(function () {
    videojs(document.getElementById('video'), {}, function() {
    });
  });
</script>
